<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  tools:context="com.xbpsolutions.ceslauncher.ui.LauncherActivity">

  <LinearLayout
    android:id="@+id/introTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:orientation="vertical">

    <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="Introducing"
      android:textColor="#fff"
      android:textSize="48sp"
      app:ftype="black" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:gravity="center"
      android:orientation="horizontal">

      <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/neon_cyan"
        android:textSize="32sp"
        app:ftype="black" />

      <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="E"
        android:textColor="@color/neon_orange"
        android:textSize="32sp"
        app:ftype="black" />

      <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="S"
        android:textColor="@color/neon_yellow"
        android:textSize="32sp"
        app:ftype="black" />

      <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Launcher"
        android:textColor="#fff"
        android:textSize="32sp"
        app:ftype="bold" />

    </LinearLayout>
  </LinearLayout>



  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/introTop"
    android:layout_centerInParent="true">

    <com.xbpsolutions.ceslauncher.ui.widgets.EnchantedViewPager
      android:id="@+id/pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></com.xbpsolutions.ceslauncher.ui.widgets.EnchantedViewPager>

  </FrameLayout>
  <LinearLayout
    android:id="@+id/introBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <!--<com.xbpsolutions.ceslauncher.ui.widgets.TfTextView-->
    <!--android:id="@+id/tfTextView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1.5"-->
    <!--android:padding="16dp"-->
    <!--android:background="@color/neon_orange"-->
    <!--android:gravity="center"-->
    <!--android:text="LATER"-->
    <!--android:textColor="#000"-->
    <!--android:textSize="22sp"-->
    <!--app:ftype="bold" />-->

    <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
      android:id="@+id/btnTryCES"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="16dp"
      android:background="@color/neon_orange"
      android:gravity="center"
      android:text="TRY CES"
      android:textColor="#000"
      android:textSize="22sp"
      app:ftype="bold" />

  </LinearLayout>
</RelativeLayout>
