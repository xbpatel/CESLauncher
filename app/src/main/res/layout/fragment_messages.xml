<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xbpsolutions.ceslauncher.ui.calls.CallsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layoutNoPermissionLogSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_emoticon" />

        <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#30ffffff"
            android:gravity="center"
            android:padding="16dp"
            android:text="Hey !! \n\nCES needs a permission to read messages from your phone !"
            android:textColor="#fff"
            android:textSize="16sp"
            app:ftype="bold" />

        <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
            android:id="@+id/txtProcessPermissionSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#30e5e5e5"
            android:padding="16dp"
            android:text="CLICK TO ALLOW"
            android:textColor="#fff"
            app:ftype="black" />

    </LinearLayout>

</RelativeLayout>
