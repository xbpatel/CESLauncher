<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#30ffffff"
    android:gravity="top"
    android:orientation="horizontal"
    android:padding="16dp">


    <com.xbpsolutions.ceslauncher.ui.calls.widget.DSAvatarImageView
        android:id="@+id/profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textAlignment="center"
        android:padding="16dp"
        app:border_color="#30ffffff"
        app:border_width="1dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.xbpsolutions.ceslauncher.ui.widgets.TfTextView
            android:id="@+id/txtCallLogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#ddffffff"
            android:textSize="18sp"
            app:ftype="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCallType"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:relative_time_prefix="" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgCallLog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_call_black_24dp" />
    </FrameLayout>


</LinearLayout>